# gitattributes rules

# Ensure all text files use LF line endings
* text=auto eol=lf

# Explicitly enforce LF for patch files
*.patch text eol=lf

# Source code consistency
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf

# Windows batch files should keep CRLF
*.bat    text eol=crlf
*.cmd    text eol=crlf

# Shell scripts should keep LF
*.sh     text eol=lf
